{
  "name": "defensive",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "example1": "ts-node -T examples/example1.ts | bunyan -o short",
    "example2": "ts-node -T examples/example2.ts | bunyan -o short",
    "example3": "ts-node -T examples/example3.ts | bunyan -o short",
    "lint": "tslint -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "test": "yar run lint && yar run tsc --noEmit && yar run jest --coverage --no-cache"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BetterCallSky/defensive.git"
  },
  "author": "≈Åukasz Sentkiewicz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BetterCallSky/defensive/issues"
  },
  "homepage": "https://github.com/BetterCallSky/defensive#readme",
  "devDependencies": {
    "@types/bunyan": "^1.8.5",
    "typescript": "^3.1.6"
  },
  "dependencies": {
    "@types/express": "^4.16.0",
    "bunyan": "^1.8.12",
    "express": "^4.16.4",
    "graphql-yoga": "^1.16.7",
    "veni": "^0.1.1"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/*.test.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    }
  }
}
